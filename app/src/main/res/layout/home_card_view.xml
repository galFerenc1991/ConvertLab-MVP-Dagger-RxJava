<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="144dp">
                <TextView
                    android:id="@+id/bankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_home"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="@dimen/bank_info_home_fragment"
                    android:text="TEST"
                    android:textSize="@dimen/bank_name_size"/>

                <TextView
                    android:id="@+id/regionName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_home_two"
                    android:layout_marginLeft="@dimen/bank_info_home_fragment"
                    />

                <TextView
                    android:id="@+id/cityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_home_two"
                    android:layout_marginLeft="@dimen/bank_info_home_fragment"
                    />

                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/bank_info_home_fragment"
                    />

                <TextView
                    android:id="@+id/adress"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/bank_info_home_fragment"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:background="@color/v">

                <ImageView
                    style="@style/MyImageView"
                    android:id="@+id/btnLink"
                    android:src="@drawable/ic_link" />

                <ImageView
                    android:id="@+id/btnMap"
                    style="@style/MyImageView"
                    android:src="@drawable/ic_map"/>

                <ImageView
                    android:id="@+id/btnPhone"
                    style="@style/MyImageView"
                    android:src="@drawable/ic_phone"/>

                <ImageView
                    android:id="@+id/btnNext"
                    style="@style/MyImageView"
                    android:padding="12dp"
                    android:src="@drawable/ic_next"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>